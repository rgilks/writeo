{
  "name": "writeo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "nuke": "rm -rf node_modules && rm -rf .next .next-validation && rm -rf coverage && npm install && npm run dev",
    "deps": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm run nuke",
    "test:e2e": "playwright test",
    "verify": "prettier --write . && next lint --fix --no-cache && npx tsc --noEmit",
    "check": "npm run verify && npm run test:e2e"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "next": "15.3.3",
    "immer": "^10.1.1",
    "zod": "^3.25.30",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "@eslint/eslintrc": "^3",
    "@aws-amplify/backend": "^1.16.1",
    "@aws-amplify/backend-cli": "^1.7.2",
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "aws-cdk": "^2.1017.1",
    "aws-cdk-lib": "2.189.1",
    "constructs": "^10.3.0",
    "esbuild": "^0.25.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4"
  }
}
